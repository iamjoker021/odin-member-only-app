<!DOCTYPE html>
<html lang="en">
    <%- include('head') %>
    <body>
        <%- include('navbar') %>
        <h1>Club Messages</h1>
        <ul>
            <% for(let i=0; i < messages.length; i++) { %>
                <li>
                    <div>
                        <h2><%= messages[i].title %></h2>
                        <p><%= messages[i].text %></p>
                        <% if (locals.currentUser && ['club', 'admin'].includes(locals.currentUser.membership_status)) { %>
                            <p>Author: <%= messages[i].author %></p>
                        <% } %>
                        <% if (locals.currentUser && locals.currentUser.membership_status === 'admin') { %>
                            <a href="/delete-message/<%= messages[i].id %>">Delete</a>
                        <% } %>
                    </div>
                </li>
            <% } %>
        </ul>
    </body>
</html>